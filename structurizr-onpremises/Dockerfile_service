FROM tomcat:9.0.80-jre17-temurin-jammy

RUN set -eux; \
	apt-get update; \
	apt-get install -y --no-install-recommends graphviz
	
ENV APPDAGENTDIR=AppServerAgent-1.8-23.10.0.35234
ADD $APPDAGENTDIR /$APPDAGENTDIR

RUN chown -R root /$APPDAGENTDIR
RUN chmod -R a+rwx /$APPDAGENTDIR

RUN sed -i 's/port="8080"/port="8080" maxPostSize="10485760"/' conf/server.xml

ADD build/libs/structurizr-onpremises.war /usr/local/tomcat/webapps/ROOT.war

ENV CATALINA_OPTS="-Xms512M -Xmx512M -javaagent:/AppServerAgent-1.8-23.10.0.35234/javaagent.jar"
EXPOSE 8080

CMD ["catalina.sh", "run"]
